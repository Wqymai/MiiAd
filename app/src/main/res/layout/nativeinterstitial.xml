<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


     <FrameLayout
         android:id="@+id/native_interstitial_adcontainer"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     </FrameLayout>

     <TextView
         android:visibility="gone"
         android:id="@+id/inters_skip_view"
         android:layout_width="96dp"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_margin="16dp"
         android:background="@drawable/background_circle"
         android:gravity="center"
         android:text="@string/click_to_skip"
         android:textColor="@android:color/white"
         android:textSize="14sp"/>


     <LinearLayout
         android:layout_below="@id/native_interstitial_adcontainer"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
     <Button
         android:text="打开广告"
         android:id="@+id/open_ad"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <Button
         android:text="关闭广告"
         android:id="@+id/close_ad"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     </LinearLayout>
</RelativeLayout>